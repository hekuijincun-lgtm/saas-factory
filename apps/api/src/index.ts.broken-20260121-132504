// GET /admin/integrations/line/callback
app.get('/admin/integrations/line/callback', async (c) => {
  try {
    const code = c.req.query('code');
    const state = c.req.query('state');
    const error = c.req.query('error');

    if (error) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent(error)}`);
    }

    if (!code || !state) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent('Missing code or state')}`);
    }

    // state ã‚’æ¤œè¨¼
    const [tenantId, nonce] = state.split(':');
    if (!tenantId || !nonce) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent('Invalid state')}`);
    }

    const kv = c.env.SAAS_FACTORY;
    const stateValue = await kv.get(`line:state:${nonce}`);
    if (!stateValue) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent('State expired or invalid')}`);
    }

    // state ã‚’å‰Šé™¤ï¼ˆä½¿ã„æ¨ã¦ï¼‰
    await kv.delete(`line:state:${nonce}`);

    // D1ã‹ã‚‰è¨­å®šã‚’å–å¾—ï¼ˆãªã‘ã‚Œã°ç’°å¢ƒå¤‰æ•°ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼‰
    let clientId: string | undefined;
    let clientSecret: string | undefined;
    const config = await getLineConfigOrNull({ DB: c.env.DB, CONFIG_ENC_KEY: c.env.CONFIG_ENC_KEY }, tenantId);
    if (config) {
      clientId = config.clientId;
      clientSecret = config.channelSecret; // OAuthç”¨ã«ã¯channelSecretã‚’ä½¿ç”¨
    } else {
      // ç’°å¢ƒå¤‰æ•°ã‹ã‚‰å–å¾—
      clientId = c.env.LINE_CLIENT_ID;
      clientSecret = c.env.LINE_LOGIN_CHANNEL_SECRET;
    }

    // Redirect Base URL ã‚’å–å¾—ï¼ˆç’°å¢ƒå¤‰æ•°ãŒã‚ã‚Œã°ãã‚Œã‚’ä½¿ç”¨ã€ãªã‘ã‚Œã°ãƒªã‚¯ã‚¨ã‚¹ãƒˆã‹ã‚‰ç”Ÿæˆï¼‰
    let redirectBase: string;
    if (c.env.LINE_LOGIN_REDIRECT_BASE) {
      redirectBase = c.env.LINE_LOGIN_REDIRECT_BASE.replace(/\/$/, '');
    } else {
      redirectBase = c.req.url.split('/admin')[0];
    }
    const redirectUri = `${redirectBase}/admin/integrations/line/callback`;

    if (!clientId) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent('LINE_CLIENT_ID is not configured')}`);
    }
    if (!clientSecret) {
      const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
      return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent('LINE_LOGIN_CHANNEL_SECRET is not configured')}`);
    }

    // code ã‚’ãƒˆãƒ¼ã‚¯ãƒ³ã«äº¤æ›
    const tokenResponse = await exchangeCodeForToken(code, clientId, clientSecret, redirectUri);

    // ãƒˆãƒ¼ã‚¯ãƒ³ã§ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ã‚’å–å¾—ï¼ˆæ¤œè¨¼ï¼‰
    const profile = await verifyAccessToken(tokenResponse.access_token);

    // settings ã‚’å–å¾—
    const settingsKey = 'settings:default';
    const settingsValue = await kv.get(settingsKey);
    const settings: AdminSettings = settingsValue
      ? mergeSettings(DEFAULT_ADMIN_SETTINGS, JSON.parse(settingsValue))
      : DEFAULT_ADMIN_SETTINGS;

    // LINEé€£æºæƒ…å ±ã‚’æ›´æ–°ï¼ˆsecretsã¯ä¿å­˜ã—ãªã„ï¼‰
    settings.integrations = settings.integrations || {};
    settings.integrations.line = {
      connected: true,
      userId: profile.userId,
      displayName: profile.displayName,
      connectedAt: Date.now(),
      notifyOnReservation: settings.integrations.line?.notifyOnReservation ?? true,
      notifyOnCancel: settings.integrations.line?.notifyOnCancel ?? true,
      notifyOnReminder: settings.integrations.line?.notifyOnReminder ?? false,
    };

    // ãƒˆãƒ¼ã‚¯ãƒ³ã¯åˆ¥ã®KVã‚­ãƒ¼ã«ä¿å­˜ï¼ˆsettingsã«ã¯å«ã‚ãªã„ï¼‰
    await kv.put(`line:token:${tenantId}`, JSON.stringify({
      access_token: tokenResponse.access_token,
      refresh_token: tokenResponse.refresh_token,
      expires_in: tokenResponse.expires_in,
      userId: profile.userId,
      displayName: profile.displayName,
    }));

    // settings ã‚’ä¿å­˜
    await kv.put(settingsKey, JSON.stringify(settings));

    const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
    return c.redirect(`${webBaseUrl}/admin/settings?success=line_connected`);
  } catch (error) {
    const webBaseUrl = c.env.WEB_BASE_URL || 'http://localhost:3000';
    const errorMessage = error instanceof Error ? error.message : String(error);
    return c.redirect(`${webBaseUrl}/admin/settings?error=${encodeURIComponent(errorMessage)}`);
  }
});

// POST /admin/integrations/line/disconnect
app.post('/admin/integrations/line/disconnect', async (c) => {
  try {
    const tenantId = getTenantId(c);

    const kv = c.env.SAAS_FACTORY;

    // settings ã‚’å–å¾—
    const settingsKey = 'settings:default';
    const settingsValue = await kv.get(settingsKey);
    const settings: AdminSettings = settingsValue
      ? mergeSettings(DEFAULT_ADMIN_SETTINGS, JSON.parse(settingsValue))
      : DEFAULT_ADMIN_SETTINGS;

    // LINEé€£æºæƒ…å ±ã‚’ç„¡åŠ¹åŒ–
    settings.integrations = settings.integrations || {};
    settings.integrations.line = {
      ...settings.integrations.line,
      connected: false,
      userId: undefined,
      displayName: undefined,
      connectedAt: undefined,
    };

    // settings ã‚’ä¿å­˜
    await kv.put(settingsKey, JSON.stringify(settings));

    // ãƒˆãƒ¼ã‚¯ãƒ³ã‚’å‰Šé™¤
    await kv.delete(`line:token:${tenantId}`);

    return c.json({ ok: true });
  } catch (error) {
    return c.json({ ok: false, error: String(error) }, 500);
  }
});

// PATCH /admin/integrations/line/notify
app.patch('/admin/integrations/line/notify', async (c) => {
  try {
    const kv = c.env.SAAS_FACTORY;
    const body = await c.req.json();
    const { enabled } = body;

    if (typeof enabled !== 'boolean') {
      return c.json({ ok: false, error: 'enabled must be a boolean' }, 400);
    }

    // settings ã‚’å–å¾—
    const settingsKey = 'settings:default';
    const settingsValue = await kv.get(settingsKey);
    const settings: AdminSettings = settingsValue
      ? mergeSettings(DEFAULT_ADMIN_SETTINGS, JSON.parse(settingsValue))
      : DEFAULT_ADMIN_SETTINGS;

    // æ¥ç¶šæ¸ˆã¿ã‹ãƒã‚§ãƒƒã‚¯
    if (settings.integrations?.line?.connected !== true || !settings.integrations.line.userId) {
      return c.json({ ok: false, error: 'LINE is not connected' }, 400);
    }

    // é€šçŸ¥è¨­å®šã‚’æ›´æ–°
    settings.integrations.line = {
      ...settings.integrations.line,
      notifyOnReservation: enabled,
      notifyOnCancel: enabled,
    };

    // settings ã‚’ä¿å­˜
    await kv.put(settingsKey, JSON.stringify(settings));

    return c.json({ ok: true });
  } catch (error) {
    return c.json({ ok: false, error: String(error) }, 500);
  }
});

// POST /admin/integrations/line/test
app.post('/admin/integrations/line/test', async (c) => {
  try {
    const tenantId = getTenantId(c);
    const kv = c.env.SAAS_FACTORY;

    // D1ã‹ã‚‰è¨­å®šã‚’å–å¾—ï¼ˆãªã‘ã‚Œã°ç’°å¢ƒå¤‰æ•°ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼‰
    let channelAccessToken: string | undefined;
    const config = await getLineConfigOrNull({ DB: c.env.DB, CONFIG_ENC_KEY: c.env.CONFIG_ENC_KEY }, tenantId);
    if (config) {
      channelAccessToken = config.channelAccessToken;
    } else {
      // å¾Œæ–¹äº’æ›æ€§: ç’°å¢ƒå¤‰æ•°ã‹ã‚‰å–å¾—
      channelAccessToken = c.env.LINE_CHANNEL_ACCESS_TOKEN;
    }

    if (!channelAccessToken) {
      return c.json({ ok: false, error: 'LINE_CHANNEL_ACCESS_TOKEN is not configured' }, 500);
    }

    // settings ã‚’å–å¾—ã—ã¦ userId ã‚’ç¢ºèª
    const settingsKey = 'settings:default';
    const settingsValue = await kv.get(settingsKey);
    const settings: AdminSettings = settingsValue
      ? mergeSettings(DEFAULT_ADMIN_SETTINGS, JSON.parse(settingsValue))
      : DEFAULT_ADMIN_SETTINGS;

    const userId = settings.integrations?.line?.userId;

    if (!userId) {
      return c.json({ 
        ok: false, 
        error: 'LINE userId not found. Please send a message from LINE first to register your userId.' 
      }, 400);
    }

    // ç–é€šãƒ†ã‚¹ãƒˆ: Push APIã§å®Ÿéš›ã«é€šçŸ¥ã‚’é€ä¿¡
    try {
      const message = 'Lumiere Admin ãƒ†ã‚¹ãƒˆé€šçŸ¥ âœ…';
      await sendLineMessage(channelAccessToken, userId, message);
      
      // æˆåŠŸæ™‚: lastSentAt ã‚’è¨˜éŒ²
      const lastSentAtKey = `line:notify:lastSentAt:${tenantId}`;
      await kv.put(lastSentAtKey, JSON.stringify({
        message,
        at: Date.now(),
      }));
      
      return c.json({ ok: true, message: 'LINE connection test successful' });
    } catch (error) {
      const errorMessage = error instanceof Error ? error.message : String(error);
      
      // ã‚¨ãƒ©ãƒ¼æ™‚: lastError ã‚’è¨˜éŒ²
      const lastErrorKey = `line:notify:lastError:${tenantId}`;
      await kv.put(lastErrorKey, JSON.stringify({
        message: 'Lumiere Admin ãƒ†ã‚¹ãƒˆé€šçŸ¥ âœ…',
        error: errorMessage,
        at: Date.now(),
      }));
      
      return c.json(jsonError(error), 500);
    }
  } catch (error) {
    return c.json(jsonError(error), 500);
  }
});

// GET /admin/integrations/line/status
app.get('/admin/integrations/line/status', async (c) => {
  try {
    // tenantId ã‚’ã‚¯ã‚¨ãƒªãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã‹ã‚‰å–å¾—ï¼ˆç„¡ã‘ã‚Œã° "default"ï¼‰
    const tenantId = c.req.query('tenantId') || 'default';
    const db = c.env.DB;

    // D1 ã® line_connections ãƒ†ãƒ¼ãƒ–ãƒ«ã‹ã‚‰ expires_at ã‚’å–å¾—
    const result = await db
      .prepare('SELECT expires_at FROM line_connections WHERE tenant_id = ?')
      .bind(tenantId)
      .first<{ expires_at: number | null }>();

    // ãƒ¬ã‚³ãƒ¼ãƒ‰ãŒå­˜åœ¨ã—ãªã„å ´åˆ
    if (!result || result.expires_at === null) {
      return c.json({
        kind: 'disconnected',
      });
    }

    // ç¾åœ¨æ™‚åˆ»ã‚’å–å¾—ï¼ˆUnix time secondsï¼‰
    const now = Math.floor(Date.now() / 1000);
    const expiresAt = result.expires_at;

    // æœ‰åŠ¹æœŸé™ãŒåˆ‡ã‚Œã¦ã„ã‚‹å ´åˆ
    if (expiresAt <= now) {
      return c.json({
        kind: 'disconnected',
        reason: 'expired',
      });
    }

    // ãƒ¬ã‚³ãƒ¼ãƒ‰ãŒå­˜åœ¨ã—ã€æœ‰åŠ¹æœŸé™å†…ã®å ´åˆ
    return c.json({
      kind: 'connected',
    });
  } catch (error) {
    console.error('[LINE Status] Error:', error);
    return c.json(jsonError(error), 500);
  }
});

// POST /admin/integrations/line/webhook
app.post('/admin/integrations/line/webhook', async (c) => {
  try {
    // ãƒªã‚¯ã‚¨ã‚¹ãƒˆãƒœãƒ‡ã‚£ã‚’å–å¾—ï¼ˆraw bodyï¼‰
    const body = await c.req.text();

    // signature / secret ã®å­˜åœ¨ãƒã‚§ãƒƒã‚¯ï¼ˆè¨­å®šãƒŸã‚¹ãŒåˆ†ã‹ã‚‹ã‚ˆã†ã« 400 ã‚’è¿”ã™ï¼‰
    const signature = c.req.header('X-Line-Signature');
    if (!signature) {
      return c.json({ ok: false, error: 'Missing X-Line-Signature header' }, 400);
    }

    // D1ã‹ã‚‰è¨­å®šã‚’å–å¾—ï¼ˆãªã‘ã‚Œã°ç’°å¢ƒå¤‰æ•°ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼‰
    let channelSecret: string | undefined;
    const config = await getLineConfigOrNull({ DB: c.env.DB, CONFIG_ENC_KEY: c.env.CONFIG_ENC_KEY }, tenantId);
    if (config) {
      channelSecret = config.channelSecret;
    } else {
      // å¾Œæ–¹äº’æ›æ€§: ç’°å¢ƒå¤‰æ•°ã‹ã‚‰å–å¾—
      channelSecret = c.env.LINE_CHANNEL_SECRET;
    }

    if (!channelSecret) {
      return c.json({ ok: false, error: 'LINE_CHANNEL_SECRET is not configured' }, 400);
    }

    // ç½²åæ¤œè¨¼ï¼ˆNGã®æ™‚ã¯ 401ï¼‰
    const isValid = await verifyLineWebhookSignature(body, signature, channelSecret);
    if (!isValid) {
      return c.json({ ok: false, error: 'Invalid signature' }, 401);
    }

    // ã‚¤ãƒ™ãƒ³ãƒˆã‚’ãƒ‘ãƒ¼ã‚¹ï¼ˆtry/catch ã§é˜²å¾¡ï¼‰
    let events: any[] = [];
    try {
      const parsed = JSON.parse(body);
      events = parsed.events || [];
    } catch (parseError) {
      console.error('LINE webhook JSON parse error:', parseError);
      return c.json({ ok: false, error: 'Invalid JSON body' }, 400);
    }

    const kv = c.env.SAAS_FACTORY;
    const tenantId = getTenantId(c);

    for (const event of events) {
      // event.type ã¨ userId ã‚’ãƒ­ã‚°å‡ºåŠ›
      const eventType = event.type || 'unknown';
      const userId = event.source?.userId || null;
      console.log(`LINE webhook event: type=${eventType}, userId=${userId || 'N/A'}`);

      // message ã‚¤ãƒ™ãƒ³ãƒˆã®å ´åˆã€userId ã‚’ä¿å­˜
      if (event.type === 'message' && event.source?.type === 'user' && userId) {
        // settings ã‚’å–å¾—ï¼ˆå¿…ãš mergeSettings ã‚’é€šã™ï¼‰
        const settingsKey = 'settings:default';
        const currentSettingsValue = await kv.get(settingsKey);
        const currentSettings: Partial<AdminSettings> | null = currentSettingsValue
          ? JSON.parse(currentSettingsValue)
          : null;

        // DEFAULT_ADMIN_SETTINGS ã¨ currentSettings ã‚’ãƒãƒ¼ã‚¸ï¼ˆæ¬ æãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‚’è£œå®Œï¼‰
        const merged: AdminSettings = mergeSettings(DEFAULT_ADMIN_SETTINGS, currentSettings);

        const existingUserId = merged.integrations.line?.userId;

        // æ—¢å­˜userIdãŒç„¡ã„ -> ä¿å­˜ã—ã¦ connected=true
        if (!existingUserId) {
          merged.integrations.line = {
            ...merged.integrations.line,
            connected: true,
            userId: userId,
            connectedAt: Date.now(),
            notifyOnReservation: merged.integrations.line?.notifyOnReservation ?? true,
            notifyOnCancel: merged.integrations.line?.notifyOnCancel ?? true,
            notifyOnReminder: merged.integrations.line?.notifyOnReminder ?? false,
            lastError: undefined, // ã‚¨ãƒ©ãƒ¼ã‚’ã‚¯ãƒªã‚¢
          };

          // ãƒãƒ¼ã‚¸æ¸ˆã¿ã® settings ã‚’ä¿å­˜ï¼ˆæ¬ æäº‹æ•…ã‚’ã‚¼ãƒ­åŒ–ï¼‰
          await kv.put(settingsKey, JSON.stringify(merged));

          console.log(`LINE userId registered: ${userId}`);
        }
        // æ—¢å­˜userIdãŒã‚ã‚‹ & åŒã˜ -> OKï¼ˆä½•ã‚‚ã—ãªã„ï¼‰
        else if (existingUserId === userId) {
          // æ—¢å­˜ã®userIdã¨åŒã˜ãªã®ã§ã€ä½•ã‚‚ã—ãªã„
          console.log(`LINE userId already registered: ${userId}`);
        }
        // æ—¢å­˜userIdãŒã‚ã‚‹ & é•ã† -> ä¿å­˜ã—ãªã„ã€ä»£ã‚ã‚Šã« lastError ã‚’è¨˜éŒ²
        else {
          const errorMessage = `LINE userId mismatch: existing=${existingUserId} incoming=${userId}`;
          
          merged.integrations.line = {
            ...merged.integrations.line,
            lastError: errorMessage,
          };

          // ãƒãƒ¼ã‚¸æ¸ˆã¿ã® settings ã‚’ä¿å­˜ï¼ˆlastError ã®ã¿æ›´æ–°ï¼‰
          await kv.put(settingsKey, JSON.stringify(merged));

          console.error(errorMessage);
        }
      }
    }

    // æˆåŠŸæ™‚ã‚‚å¿…ãš 200 JSON è¿”ã™ï¼ˆLINEã¯200ãŒè¶…é‡è¦ï¼‰
    return c.json({ ok: true }, 200);
  } catch (error) {
    console.error('LINE webhook error:', error);
    return c.json({ ok: false, error: String(error) }, 500);
  }
});

// Durable Object ã® export
// export { SlotLock };

export default app;
